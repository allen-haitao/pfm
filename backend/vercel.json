{
    "builds": [{
        "src": "backend/wsgi.py",
        "use": "@vercel/python"
    },
    {
        "src": "migrate.sh",
        "use": "@vercel/static_build"
    }],
    "routes": [
        { "src": "/favicon.ico", "status": 204 },
        { "src": "/favicon.png", "status": 204 },
        { "src": "/", "status": 404 },
        {
            "src": "/(.*)",
            "dest": "backend/wsgi.py"
        }
    ],
    "postBuild": "python3 manage.py makemigrations && python3 manage.py migrate"
}